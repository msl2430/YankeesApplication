@using System.Web.Optimization
<!DOCTYPE html>
<html ng-app="YankeesCodeChallenge">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Layout.Mobile.cshtml</title>
    
    @Styles.Render("~/Content/Styles/Bundles/default-style")
    @Scripts.Render("~/Content/Scripts/Bundles/default-scripts")

    <script src="~/Content/Scripts/jQuery/jquery.mobile-1.3.2.min.js"></script>
    <link href="~/Content/Styles/jQuery/jquery.mobile-1.3.2.min.css" rel="stylesheet" />

    <script type="text/javascript" language="javascript">
        var baseUrl = "@Url.Content("~/")";
    </script> 
</head>
<body>
    <div data-role="page" id="@(ViewBag.PageId)" data-title="@(ViewBag.PageTitle)">
        <div data-role="header">
            @if (Convert.ToBoolean(ViewBag.IncludeBackButton))
            {
                <a href="@(Url.Action("Index", "Home"))" rel="external"><span class="ui-icon ui-icon-arrow-l ui-icon-shadow"></span></a>
            }
            <h1>@(ViewBag.PageHeader)</h1>
        </div>
        <div data-role="content">            
            @RenderBody()               
        </div>
        <div data-role="footer">
            &nbsp;
        </div>
    </div>
</body>
</html>
